<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/userId"
        android:text="HouseNumber"
        android:textStyle="bold"
        android:drawableLeft="@drawable/house"
        android:padding="10dp"
        android:layout_margin="15dp"
        android:layout_marginHorizontal="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/userName"
        android:text="UserName"
        android:textStyle="bold"
        android:drawableLeft="@drawable/name"
        android:padding="10dp"
        android:layout_margin="15dp"
        android:layout_marginHorizontal="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/userGender"
        android:text="Users Gender"
        android:textStyle="bold"
        android:drawableLeft="@drawable/gender"
        android:padding="10dp"
        android:layout_margin="15dp"
        android:layout_marginHorizontal="10dp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/userPhone"
        android:text="User PhoneNumber"
        android:textStyle="bold"
        android:drawableLeft="@drawable/phone"
        android:padding="10dp"
        android:layout_margin="15dp"
        android:layout_marginHorizontal="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/userEmail"
        android:text="Users Email"
        android:textStyle="bold"
        android:drawableLeft="@drawable/email"
        android:padding="10dp"
        android:layout_margin="15dp"
        android:layout_marginHorizontal="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listPest"
        android:text="Users Pest Problem"
        android:textStyle="bold"
        android:drawableLeft="@drawable/pest"
        android:padding="10dp"
        android:layout_margin="15dp"
        android:layout_marginHorizontal="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/userDate"
        android:text="Date"
        android:textStyle="bold"
        android:drawableLeft="@drawable/date"
        android:padding="10dp"
        android:layout_margin="15dp"
        android:layout_marginHorizontal="10dp"/>

</LinearLayout>