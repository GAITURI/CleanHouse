<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
   android:orientation="vertical"
    android:layout_height="match_parent">


    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0dp"
        android:scrollbars="none">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutupdate1"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:layout_gravity="center_horizontal"
        android:padding="50dp"
        android:gravity="center">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/updateId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter HouseNumber" />

    </com.google.android.material.textfield.TextInputLayout>




    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutupdate2"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:layout_gravity="center_horizontal"
        android:padding="50dp"
        android:gravity="center">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/updateUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter username" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutupdate3"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:layout_gravity="center_horizontal"
        android:padding="50dp"
        android:gravity="center">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/updateGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Gender" />


    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutupdate4"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:layout_gravity="center_horizontal"
        android:padding="50dp"
        android:gravity="center">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/updatePhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter PhoneNumber" />


    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutupdate5"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:layout_gravity="center_horizontal"
        android:padding="50dp"
        android:gravity="center">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/updateUserEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter new Email" />


    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutupdate6"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:layout_gravity="center_horizontal"
        android:padding="50dp"
        android:gravity="center">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/updatePest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Pest Problem" />


    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutupdate7"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:layout_gravity="center_horizontal"
        android:padding="50dp"
        android:gravity="center">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/updatedate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Date " />


    </com.google.android.material.textfield.TextInputLayout>



</LinearLayout>

</ScrollView>
</LinearLayout>